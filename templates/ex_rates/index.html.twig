{% extends 'base.html.twig' %}

{% block title %}Hello ExRatesController!{% endblock %}

{% block body %}
    <style>
        .page-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
            display: flex;
            flex-direction: column;
        }

        .page-wrapper .exrates {
            display: flex;
            flex-direction: row;
            /*width: 100%;*/
            justify-content: space-between;
            background: #F5F5F5;
            padding: 2px 6px;
        }

        .page-wrapper .exrates div {
            margin: 10px;
        }

        .page-wrapper .exrates div:nth-last-child(2) {
            margin-left: auto;
        }

        .page-wrapper .exrates div:nth-last-child(1) {
            width: 70px;
            text-align: right;
        }
    </style>

    <div class="page-wrapper">
    {% for exrates in exrates %}
        <div>
            <div>{{ exrates.date|date("d/m/y") }}</div>
            <div class="exrates">
                <div>{{ exrates.name }}</div>
                <div>{{ exrates.scale }}</div>
                <div>{{ exrates.rate }}</div>
            </div>
        </div>
    {% endfor %}

    </div>
{% endblock %}
